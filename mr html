    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set min date for booking calendar
            const datetimeInput = document.getElementById('datetime');
            if (datetimeInput) {
                const now = new Date();
                const year = now.getFullYear();
                const month = (now.getMonth() + 1).toString().padStart(2, '0');
                const day = now.getDate().toString().padStart(2, '0');
                const hours = now.getHours().toString().padStart(2, '0');
                const minutes = now.getMinutes().toString().padStart(2, '0');
                
                const currentDatetime = `${year}-${month}-${day}T${hours}:${minutes}`;
                datetimeInput.min = currentDatetime;
            }

            // Show welcome modal on page load
            const welcomeModal = document.getElementById('welcomeModal');
            if (welcomeModal) {
                welcomeModal.style.display = 'block';
                setTimeout(() => {
                    welcomeModal.style.display = 'none';
                }, 3000); // Hide after 3 seconds
            }
        });

        function sendBookingEmail() {
            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const problem = document.getElementById('problem').value;
            const datetime = document.getElementById('datetime').value;

            if (name && phone && problem && datetime) {
                const subject = "New Repair Booking from Website";
                const body = `Name: ${name}\nPhone Number: ${phone}\nProblem Type: ${problem}\nPreferred Date/Time: ${datetime}`;
                window.location.href = `mailto:madhavarepairs@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            } else {
                alert("Please fill out all the fields to submit your booking.");
            }
        }

        function openContactModal() {
            document.getElementById('contactModal').style.display = 'block';
        }

        function closeContactModal() {
            document.getElementById('contactModal').style.display = 'none';
        }

        function sendContactEmail() {
            const name = document.getElementById('contact-name').value;
            const email = document.getElementById('contact-email').value;
            const query = document.getElementById('query').value;

            if (name && email && query) {
                const subject = "New Contact Inquiry from Website";
                const body = `Name: ${name}\nEmail: ${email}\n\nQuery:\n${query}`;
                window.location.href = `mailto:madhavarepairs@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            } else {
                alert("Please fill out all the fields to send your message.");
            }
        }
    </script>

